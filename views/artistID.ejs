<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Spotify Artist Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://bootswatch.com/yeti/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/style.css" media="screen" title="no title" charset="utf-8">
    
  </head>
  <body>
    <div class="row">
      <div class="col-md-6">
        <img class="bgImg" src="/spotify.jpg">
      </div>
      <div class="col-md-6 well center">
        <h1>Artists ID</h1>
         
        <h3><%= artist.name%> </h3>
        <% if(artist.images[0] === undefined){%>
            <img src="http://cornflowermusic.com/wp-content/uploads/2013/11/img-featureslider-20131121-Cornflower-Spotify-post.jpg" >
        <% }else { %>
              <img src="<%= artist.images[0].url%>">
        <% } %>
         <% tracksList.forEach(function(track) { %>
              <h4><%=  track.name %> </h4>
               <% track.tracks.forEach(function(list) { %>
                 <li><%=  list.name %></li>
              <% }) %>
        <% }) %>
      </div>
    </div>
  </body>
</html>


